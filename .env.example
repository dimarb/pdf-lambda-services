# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=your-account-id
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# Lambda Configuration
LAMBDA_FUNCTION_NAME=gotenberg-pdf-service
LAMBDA_MEMORY_SIZE=2048
LAMBDA_TIMEOUT=300
LAMBDA_ROLE_ARN=arn:aws:iam::your-account-id:role/lambda-execution-role
LAMBDA_CREATE_FUNCTION_URL=true

# ECR Configuration
# Now uses custom-built image from Dockerfile.gotenberg with Lambda optimizations
ECR_REPOSITORY_NAME=gotenberg-lambda
ECR_IMAGE_TAG=latest

# Gotenberg Authentication
GOTENBERG_API_BASIC_AUTH_USERNAME=admin
GOTENBERG_API_BASIC_AUTH_PASSWORD=change-this-secure-password
API_ENABLE_BASIC_AUTH=true

# Gotenberg Configuration
GOTENBERG_API_PORT=3000
GOTENBERG_LOG_LEVEL=info

# Chromium Performance Optimizations for Lambda
CHROMIUM_DISABLE_WEB_SECURITY=true
CHROMIUM_ALLOW_LIST=^file:///tmp/.*
CHROMIUM_IGNORE_CERTIFICATE_ERRORS=true
CHROMIUM_DISABLE_JAVASCRIPT=false
CHROMIUM_INCOGNITO=true
CHROMIUM_ALLOW_INSECURE_LOCALHOST=true
CHROMIUM_START_TIMEOUT=30s

# PDF Engines Configuration (all engines enabled)
PDFENGINES_MERGE_ENGINES=qpdf,pdfcpu,pdftk
PDFENGINES_SPLIT_ENGINES=qpdf,pdfcpu,pdftk
PDFENGINES_FLATTEN_ENGINES=qpdf
PDFENGINES_CONVERT_ENGINES=libreoffice-pdfengine
